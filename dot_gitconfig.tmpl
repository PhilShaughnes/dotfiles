[user]
	name = {{ .name }}
	email = {{ .email }}
[core]
	autocrlf = false
	safecrlf = true
	excludesfile = $HOME/.gitignore_global
	editor = nvim
	pager = less -x1,3
	; pager = bat --style="grid"

[alias]
	co = checkout
	ci = commit
	st = status
	b = branch
	lg = log --stat --abbrev-commit --show-signature
	tree = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	type = cat-file -t
	dump = cat-file -p
	a = add -A
	c = commit -v
	l = log -1 --pretty=%B
	last = show --stat
	empty = commit --allow-empty -m "Empty-Commit"
	e = commit --allow-empty -m "Empty-Commit"
	br = rev-parse --abbrev-ref HEAD

[credential]
	# this is a comment
	; helper = store
[init]
	; templatedir = ~/.git_template
	defaultBranch = main

[github]
	user = philshaughnes

[pull]
	rebase = false

{{- if eq .comp "ggp" }}
[merge]
	keepBackup = false
	tool = p4merge

[mergetool "p4merge"]
	cmd = /Applications/p4merge.app/Contents/Resources/launchp4merge "$BASE" "$REMOTE" "$LOCAL" "$MERGED"
	keepTemporaries = false
	trustExitCode = false
	keepBackup = false

[mergetool]
	keepBackup = false

[diff]
	tool = p4merge

[difftool "p4merge"]
	cmd = /Applications/p4merge.app/Contents/Resources/launchp4merge "$LOCAL" "$REMOTE"

[branch]
	autosetupmerge = true
{{- else}}
[difftool]
	prompt = true

[diff]
	tool = nvimdiff

[difftool "nvimdiff"]
	cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
{{- end }}

; git config remote.origin.fetch +refs/heads/*:refs/remotes/origin/*
